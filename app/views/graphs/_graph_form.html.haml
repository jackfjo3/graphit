= simple_form_for @graph, html: { multipart: true } do |f|
  - if @graph.errors.any?
    #errors
      %p
        = @graph.errors.count
        Prevented this recipe from saving.
      %ul
        - @graph.errors.full_messages.each do |msg|
          %li= msg
 
  = f.input :name, input_html: { class: 'form-control'}

  %br
  = f.button :submit, class: "btn btn-primary"